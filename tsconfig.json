{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es5",
        "module": "commonjs",
        "outDir": "dist",
        "lib": ["es2015"],
        "typeRoots":[
            "../node_modules/@types"
        ],
        "types":[
            "node"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/*.ts",
    ],
    "exclude":[
        "node_modules"
    ],
    "compileOnSave": true,
    "buildOnSave": true    
}